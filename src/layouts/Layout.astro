---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Vermietung von Lautsprechern, Musikanlagen, Partyboxen und Partybeleuchtung für jede Feier im Großraum Stuttgart.",
  image = "/img/header.jpg"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Holger Kampffmeyer" />
    <meta name="keywords" content="Partytechnik mieten Stuttgart, Verleih Stuttgart, PA-Anlage mieten, Partybox mieten, Lautsprecher mieten, Lichttechnik mieten, Musikanlage mieten, DJ-Equipment mieten, Leinfelden-Echterdingen, Esslingen, Tübingen, Veranstaltungstechnik, Hochzeit, Firmenfeier, Geburtstag" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0a0a0f" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&family=Play:wght@400;700&display=swap" rel="stylesheet">
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={new URL(image, Astro.site).href} />
    <meta property="og:site_name" content="Sound & Licht Stuttgart" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site).href} />
    
    <title>{title}</title>
    
    <!-- Schema.org LocalBusiness -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Sound & Licht Stuttgart - Partytechnik Verleih",
      "description": "Vermietung von PA-Anlagen, Partyboxen, Musikanlagen, Lichttechnik und DJ-Equipment für Partys, Hochzeiten und Firmenevents in Stuttgart, Leinfelden-Echterdingen, Esslingen, Tübingen.",
      "image": "https://soundundlicht-stuttgart.de/img/djhulk_logo.png",
      "@id": "https://soundundlicht-stuttgart.de/",
      "url": "https://soundundlicht-stuttgart.de/",
      "telephone": "+49-157-37433743",
      "priceRange": "€€",
      "areaServed": {
        "@type": "GeoCircle",
        "geoMidpoint": {
          "@type": "GeoCoordinates",
          "latitude": 48.72,
          "longitude": 9.16
        },
        "geoRadius": "50000"
      },
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Magellanstraße 4",
        "addressLocality": "Leinfelden-Echterdingen",
        "postalCode": "70771",
        "addressRegion": "Baden-Württemberg",
        "addressCountry": "DE"
      },
      "openingHoursSpecification": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        "opens": "09:00",
        "closes": "18:00"
      },
      "sameAs": [
        "https://www.facebook.com/profile.php?id=61559169515364",
        "https://www.instagram.com/holgerkampffmeyer/"
      ],
      "potentialAction": {
        "@type": "ReserveAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "https://holger-kampffmeyer.de/vermietung.html"
        },
        "name": "Technik mieten"
      }
    }
    </script>
  </head>
  <body class="min-h-screen">
    <slot />
    <script>
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, { threshold: 0.1 });

      document.querySelectorAll('.animate-on-scroll').forEach(el => {
        observer.observe(el);
      });
    </script>
  </body>
</html>
